generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum TxDirection {
  INFLOW
  OUTFLOW
}

enum PaymentStatus {
  PENDING
  PAID
}

enum PersonType {
  EMPLOYEE
  CONTRACTOR
}

enum BusinessType {
  FREELANCER
  AGENCY
  STARTUP
  SMB
  OTHER
}

enum BusinessStage {
  JUST_STARTED      // 0-6 months
  EARLY             // 6-18 months
  GROWING           // 18+ months, scaling
  ESTABLISHED       // Profitable, stable
}

model AppUser {
  id           String   @id @db.Uuid
  email        String
  name         String?
  
  // Onboarding fields
  onboardingComplete Boolean       @default(false)
  businessType       BusinessType?
  businessStage      BusinessStage?
  businessName       String?
  monthlyRevenuePaise Int?         // Average monthly revenue
  monthlyExpensesPaise Int?        // Average monthly expenses
  teamSize           Int?          // Number of team members
  primaryGoal        String?       // What they want to achieve
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  bankAccounts      BankAccount[]
  uploads           Upload[]
  transactions      Transaction[]
  people            Person[]
  payments          Payment[]
  cashSnapshots     CashSnapshot[]
  recurringExpenses RecurringExpense[]
  invoices          Invoice[]
  taxReminders      TaxReminder[]
  financialGoals    FinancialGoal[]
}

model BankAccount {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  name      String
  currency  String   @default("INR")
  createdAt DateTime @default(now())

  user         AppUser       @relation(fields: [userId], references: [id], onDelete: Cascade)
  uploads      Upload[]
  transactions Transaction[]
}

model Upload {
  id               String   @id @default(uuid()) @db.Uuid
  userId           String   @db.Uuid
  bankAccountId    String?  @db.Uuid
  originalFilename String
  storageBucket    String
  storagePath      String
  status           String   @default("IMPORTED")
  error            String?
  uploadedAt       DateTime @default(now())

  user         AppUser      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount  BankAccount? @relation(fields: [bankAccountId], references: [id], onDelete: SetNull)
  transactions Transaction[]
}

model Transaction {
  id            String      @id @default(uuid()) @db.Uuid
  userId        String      @db.Uuid
  bankAccountId String?     @db.Uuid
  uploadId      String?     @db.Uuid

  date        DateTime
  description String
  amountPaise Int
  direction   TxDirection
  category    String      @default("Uncategorized")

  dedupeHash String
  rawRowJson Json?
  createdAt  DateTime @default(now())

  user        AppUser      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount? @relation(fields: [bankAccountId], references: [id], onDelete: SetNull)
  upload      Upload?      @relation(fields: [uploadId], references: [id], onDelete: SetNull)

  @@unique([userId, dedupeHash])
  @@index([userId, date])
}

model Person {
  id               String     @id @default(uuid()) @db.Uuid
  userId           String     @db.Uuid
  name             String
  type             PersonType
  monthlyCostPaise Int
  startDate        DateTime?
  createdAt        DateTime   @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Payment {
  id          String        @id @default(uuid()) @db.Uuid
  userId      String        @db.Uuid
  name        String
  dueDate     DateTime
  amountPaise Int
  status      PaymentStatus @default(PENDING)
  paidAt      DateTime?
  createdAt   DateTime      @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dueDate])
}

model CashSnapshot {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @db.Uuid
  asOfDate        DateTime
  cashOnHandPaise Int
  source          String   @default("MANUAL")
  createdAt       DateTime @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, asOfDate])
}

// ============================================
// RECURRING EXPENSES
// ============================================
enum RecurringFrequency {
  WEEKLY
  MONTHLY
  QUARTERLY
  YEARLY
}

model RecurringExpense {
  id          String             @id @default(uuid()) @db.Uuid
  userId      String             @db.Uuid
  name        String
  amountPaise Int
  frequency   RecurringFrequency
  category    String             @default("Subscription")
  nextDueDate DateTime
  isActive    Boolean            @default(true)
  createdAt   DateTime           @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, nextDueDate])
}

// ============================================
// INVOICES / RECEIVABLES
// ============================================
enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  OVERDUE
  CANCELLED
}

model Invoice {
  id            String        @id @default(uuid()) @db.Uuid
  userId        String        @db.Uuid
  invoiceNumber String
  clientName    String
  clientEmail   String?
  amountPaise   Int
  dueDate       DateTime
  status        InvoiceStatus @default(SENT)
  paidAt        DateTime?
  notes         String?
  createdAt     DateTime      @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, invoiceNumber])
  @@index([userId, status])
  @@index([userId, dueDate])
}

// ============================================
// TAX REMINDERS
// ============================================
enum TaxType {
  GST
  TDS
  ADVANCE_TAX
  ITR
  OTHER
}

model TaxReminder {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @db.Uuid
  taxType     TaxType
  title       String
  dueDate     DateTime
  amountPaise Int?     // Estimated amount if known
  isCompleted Boolean  @default(false)
  completedAt DateTime?
  notes       String?
  createdAt   DateTime @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, dueDate])
}

// ============================================
// GOALS & PROJECTIONS
// ============================================
model FinancialGoal {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String   @db.Uuid
  title           String
  targetPaise     Int
  currentPaise    Int      @default(0)
  deadline        DateTime
  isCompleted     Boolean  @default(false)
  createdAt       DateTime @default(now())

  user AppUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
