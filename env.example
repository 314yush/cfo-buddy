# ============================================
# CFO Buddy - Environment Variables
# ============================================
# Copy this file to .env and fill in your values.

# --------------------------------------------
# SUPABASE (Project Settings → API)
# --------------------------------------------

# Project URL (e.g. https://abcdefgh.supabase.co)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# anon (public) key - safe to expose to browser
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# service_role (secret) key - NEVER expose to browser
# Required for server-side Storage uploads
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# --------------------------------------------
# DATABASE (Supabase → Settings → Database)
# --------------------------------------------

# Pooler connection (use port 6543, use Transaction mode)
# Go to: Settings → Database → Connection string → URI → Transaction
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Session/Direct connection (use port 5432, no pgbouncer)
# Go to: Settings → Database → Connection string → URI → Session
# Required for Prisma migrations
DIRECT_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# --------------------------------------------
# GEMINI AI (Client-side PDF processing)
# --------------------------------------------
# Get your API key from https://aistudio.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY="your-gemini-api-key"

# --------------------------------------------
# GROQ AI (Server-side PDF fallback) - FREE & FAST
# --------------------------------------------
# Get your free API key at: https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key"
